@using Yoga.Views.Manage
@inject SignInManager<User> SignInManager
@{
	var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul>
	<li><a asp-action="Index">Profile</a></li>
	<li><a asp-action="ChangePassword">Password</a></li>
	@if (hasExternalLogins)
	{
		<li><a asp-action="ExternalLogins">External logins</a></li>
	}
	<li><a asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
</ul>

