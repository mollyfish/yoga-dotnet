@model Yoga.Models.PhoneViewModels.AddPhoneViewModel

@{
	ViewData["Title"] = "Add Phone";
}

<h2>Add Phone</h2>
<h5>@Model.Owner.FirstName @Model.Owner.LastName</h5>

<form asp-action="Create">
	<div asp-validation-summary="ModelOnly"></div>
	<input type="hidden" asp-for="@Model.Owner.Id" />
	<input type="hidden" asp-for="@Model.Owner.FirstName" />
	<input type="hidden" asp-for="@Model.Owner.LastName" />
	<input type="hidden" asp-for="@Model.Owner.FullName" />

	<label asp-for="@Model.newPhone.Phone"></label>
	<input asp-for="@Model.newPhone.Phone" />
	<span asp-validation-for="@Model.newPhone.Phone"></span>

	<input type="hidden" asp-for="@Model.newPhone.PersonId" value="@Model.Owner.Id" />



	<input type="submit" value="Add" />
</form>

<a asp-controller="People" asp-action="Details" asp-route-id="@Model.Owner.Id">Back to Details</a>
