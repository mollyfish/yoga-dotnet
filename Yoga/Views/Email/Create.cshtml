@model Yoga.Models.EmailViewModels.AddEmailViewModel

@{
	ViewData["Title"] = "Add Email";
}

<h2>Add Email</h2>
<h5>@Model.Owner.FirstName @Model.Owner.LastName</h5>

<form asp-action="Create">
	<div asp-validation-summary="ModelOnly"></div>

	<label asp-for="@Model.newEmail.Email"></label>
	<input asp-for="@Model.newEmail.Email" />
	<span asp-validation-for="@Model.newEmail.Email"></span>

	<input type="hidden" asp-for="@Model.newEmail.PersonId" value="@Model.Owner.Id" />



	<input type="submit" value="Add" />
</form>

<a asp-controller="People" asp-action="Details">Back to List</a>
