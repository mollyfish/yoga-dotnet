@model Yoga.Models.PersonViewModels.DonationViewModels.DonationViewModel

@{
	ViewData["Title"] = "Delete";
	Layout = "_Layout";
}

<h2>Delete Donation</h2>

<h3>Are you sure you want to delete this donation?</h3>
	<ul>
		<li>Donation ID#: @Model.Donation.Id</li>
		<li>@Model.Donor.FirstName @Model.Donor.LastName</li>
		<li>@Model.Donation.Amount</li>
		<li>@Model.Donation.Date.ToShortDateString()</li>
		<li>@Model.Donation.DonationType</li>
	</ul>
	

	<form asp-action="DeleteConfirmed" asp-route-id="@Model.Donation.Id">
		<input type="hidden" asp-for="@Model.Donation.Id" value="@Model.Donation.Id" />
		<input type="submit" value="Delete" /> |
		<a asp-action="Index">Back to Donation List</a>
	</form>
