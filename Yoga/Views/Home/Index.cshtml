{<ul>
	<li>
		<a asp-controller="Access" asp-action="/Index">Manage Admin Access</a>
	</li>
	<li>
		<a asp-controller="UploadFiles" asp-action="/Index">Upload Bulk Data</a>
	</li>
	<li>
		<a asp-controller="People" asp-action="/Index">Manage People</a>
	</li>
	<li>
		<a asp-controller="Donations" asp-action="/Index">Manage Donations</a>
	</li>
	<li>
		<a asp-controller="Events" asp-action="/Index">Manage Events</a>
